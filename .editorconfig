root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.gradle.kts,*.kt,*.kts,*.main.kts,*.space.kts}]
max_line_length = 140

[{*.har,*.json}]
indent_size = 2

[{*.yaml,*.yml}]
indent_size = 2
